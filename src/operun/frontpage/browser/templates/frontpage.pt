<html i18n:domain="plone"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      xml:lang="en"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns="http://www.w3.org/1999/xhtml">

  <body>

    <metal:content-core fill-slot="main">
      <metal:content-core define-macro="content-core" tal:define="toc context/table_of_contents|nothing;">

        <header>
          <h1 class="documentFirstHeading" tal:content="context/title">Title</h1>
          <div class="documentDescription description" tal:content="context/description">Lorem ipsum dolor sit amet</div>
        </header>

        <section>
          <div id="carousel" tal:condition="teasers" tal:define="teasers view/teasers">
            <tal:teasers tal:repeat="teaser teasers">

              <div class="teaser-wrapper">
                <div class="teaser">

                  <div class="teaser-image">
                    <img tal:replace="structure teaser/image"/>
                  </div>

                  <div class="teaser-text">
                    <div class="teaser-title">
                      <h2 tal:content="teaser/title">Teaser Title</h2>
                    </div>

                    <div class="teaser-description">
                      <p tal:content="teaser/description">Teaser Description</p>
                    </div>
                  </div>

                </div>
              </div>

            </tal:teasers>
          </div>
        </section>

        <script tal:content="view/get_js_vars" type="text/javascript"></script>
        <script type="text/javascript">

          require([
            'jquery',
            'carouFredSel'
          ], function ($) {
            'use strict';

            $(window).load( function(){
              $("#carousel").carouFredSel({
                items: {visible: 1},
                scroll: {fx: animation, duration: 500, pauseOnHover: true},
                auto: false,
                responsive: true,
                auto: true,
                prev: {button: ".navigation .prev", key: "left"},
                next: {button: ".navigation .next", key: "right"}
              });
            });
          });
        </script>

      </metal:content-core>
    </metal:content-core>

  </body>

</html>
